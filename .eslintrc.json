{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "extends": [
    "plugin:json/recommended",
    "eslint:recommended",
    "standard"
  ],
  "ignorePatterns": [
    "docs/*"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "prefer-const": 0,
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "quote-props": [
      "error",
      "consistent"
    ]
  }
}
